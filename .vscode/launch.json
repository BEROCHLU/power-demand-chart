{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Chrome test",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:5500/${relativeFileDirname}",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Chrome native",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:5500/dev/native.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "debug nodejs",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        }
    ]
}